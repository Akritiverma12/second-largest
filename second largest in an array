//better approach
int getSecondLargest(vector<int> &arr) {
        
        int l=arr[0];
        int sl=-1;
        for(int i=0;i<arr.size();i++){
            if(arr[i]>l){
                sl=l;
                l=arr[i];
            }
            else if(arr[i]<l && arr[i]>sl){
                sl=arr[i];
            }
        }return sl;
    }
//optimal approach
